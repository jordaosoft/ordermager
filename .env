# Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_PASSWORD=secure_password_123
DATABASE_URL=postgresql://postgres:secure_password_123@postgres:5432/order_management

# Authentication
JWT_SECRET=your_256_bit_secret_key_here_make_it_very_long_and_secure
SESSION_SECRET=another_secret_key_for_sessions

# Default Admin Account
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=change_this_secure_password

# Application Settings
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://yourdomain.com

# Redis Configuration
REDIS_URL=redis://redis:6379

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@company.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=orders@yourcompany.com
FROM_NAME=Order Management System

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM UTC
BACKUP_RETENTION_DAYS=30
AWS_ACCESS_KEY_ID=your_aws_key  # Optional for S3 backups
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=your-backup-bucket
AWS_REGION=us-east-1

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=/app/uploads

# Security Settings
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10485760  # 10MB
LOG_FILE_MAX_FILES=5

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/nginx.crt
SSL_KEY_PATH=/etc/nginx/ssl/nginx.key

# Company Information (for PDFs and emails)
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=123 Business Street, City, State 12345
COMPANY_PHONE=(555) 123-4567
COMPANY_EMAIL=contact@yourcompany.com
COMPANY_WEBSITE=https://yourcompany.com